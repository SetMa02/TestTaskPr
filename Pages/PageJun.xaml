<Page x:Class="TestTaskPr.Pages.PageJun"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestTaskPr.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageJun">

    <Grid>
        <DataGrid x:Name="DGJun" AutoGenerateColumns="False" IsReadOnly="True" ColumnWidth="*">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding Reader.lastName}"></DataGridTextColumn>
                <DataGridTextColumn Header="Имя" Binding="{Binding Reader.firstName}"></DataGridTextColumn>
                <DataGridTextColumn Header="Отчество" Binding="{Binding Reader.patronymic}"></DataGridTextColumn>
                <DataGridTextColumn Header="Книга" Binding="{Binding name}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
