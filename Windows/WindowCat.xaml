<Window x:Class="TestTaskPr.Windows.WindowCat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestTaskPr.Windows"
        mc:Ignorable="d"
        Title="WindowCat" Height="200" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Margin="5" FontSize="14">Наименование категории:</TextBlock>
            <TextBox Margin="5" FontSize="14" x:Name="txtGenre"></TextBox>
            <Button Background="#ab8c44" x:Name="btnSave" Click="btnSave_Click">Сохранить</Button>
        </StackPanel>
    </Grid>
</Window>
